#if($ticket.getCuponesAplicados() && !$ticket.getCuponesAplicados().isEmpty())
<linea>
	<texto size="33" align="left" style="3">Cupones aplicados</texto>
</linea>
	#foreach($cupon in $ticket.getCuponesAplicados())
	<linea>
		<texto size="33" align="left">${cupon.getTextoPromocion()}</texto>
		<texto size="11" align="right">${fmt.formateaImporte($cupon.getImporteTotalAhorrado())}</texto>
	</linea>
	#end
#end

